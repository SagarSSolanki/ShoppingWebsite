<%= image_tag @product.image %>
<h1><%= @product.name %></h1>

<h3><%= @product.price %></h3>
<h3><%= @product.stock %></h3>

<%= form_with model: @cartitem, url: cartitems_path, method: :post do |form| %>
  <p>
    <%= form.label :quantity %>
    <%= form.number_field :quantity, value: 1 %><br>
    <%= form.label :product_id %>
    <%= form.number_field :product_id %><br>
    <%= form.label :cart_id %>
    <%= form.number_field :cart_id %>
  </p>
  <p>
    <%= form.submit "Add to Cart"%>
  </p>
<% end %>

<% if @user %>
  <% if @user.email == "sagar@gmail.com"%>
    <%= button_to "Edit Product", edit_product_path, method: :get %>
    <%= button_to "Delete Product", product_path, method: :delete %>
  <% end %>
<% end %>
