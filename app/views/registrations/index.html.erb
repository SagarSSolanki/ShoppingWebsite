<h1>Welcome Sagar</h1>

<% if @user %>
    Logged in as: <%= @user.email %>

    <h2>Add Address:</h2>
    <%= form_with model: [ @user, @user.addresses.build ] do |form| %>
        <p>
          <%= form.label :area %><br>
          <%= form.text_field :area %>
        </p>
        <p>
          <%= form.label :city %><br>
          <%= form.text_field :city %>
        </p>
        <p>
          <%= form.label :state %><br>
          <%= form.text_field :state %>
        </p>
        <p>
          <%= form.label :pincode %><br>
          <%= form.number_field :pincode %>
        </p>
        <p>
          <%= form.submit %>
        </p>
      <% end %>

    <%= button_to "Logout", logout_path, method: :delete %>
<% end %>
